package second;

public class Circle {

	double rad = 0;
	final double PI = 3.41;
	
	public Circle(double r) {
		setRad(r);
	}
	
	public void setRad(double r) {
		if(r<0) {
			rad = 0;
			return;
		}
		rad = r;
	}
	
	public double getArea() {     // 원의 넓이 구하기
		return (rad*rad)*PI;
	}

}

public class UnsafeCircle() {
	
}
